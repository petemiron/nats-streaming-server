{
  "builders": [{
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-40d28157",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "packer-nats {{timestamp}}"
    }
  ],
  "provisioners": [{
    "type": "file",
    "source": "scripts/nats/etc",
    "destination": "./etc"
  }, {
    "type": "file",
    "source": "scripts/nats/home",
    "destination": "./home"
  }, {
    "type": "shell",
    "scripts": [
      "scripts/nats/setup.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "ubuntu-16.04-amd64-{{.Provider}}.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "29a8b9009509b39d542ecb229787cdf48f05e739a932289de9e9858d7c487c80",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "http://releases.ubuntu.com",
    "ssh_timeout": "60m"
  }
}
